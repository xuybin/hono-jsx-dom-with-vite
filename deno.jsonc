{
  "tasks": {
    "dev": "deno task build;deno serve  -A src/index.tsx",
    "build": "deno run -A --node-modules-dir npm:vite build --mode client"
  },
  "lock": false,
  "imports": {
    "vite": "npm:vite@5.4.2"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "npm:hono@^4.2.3/jsx"
  },
  "fmt": {
    "lineWidth": 200,
    "exclude": ["**/node_modules", "@(public|static|dist)/**/*"]
  }
}
